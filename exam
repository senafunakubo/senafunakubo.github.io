#import <Cocoa/Cocoa.h>
#import "Products.h"
#import "Drinks.h"
#import "Food.h"
#import "Cloth.h"
#import "Material.h"
#import "ShoppingCart.h"

int main(int argc, const char * argv[]) {

    @autoreleasepool {

  //Put all of products to the shopping cart.
    NSMutableArray<Products*>* allKindOfProducts = [[NSMutableArray alloc] init];
    ShoppingCart* shopping =[[ShoppingCart alloc]initWithProductsArray:allKindOfProducts];

    Drinks* drink1 = [[Drinks alloc]initWithProductId:412 productName:@"Pepsi" productPrice:2 productMadeInCountry:@"USA" isDrinkDiet:NO drinkSize:150];
    Drinks* drink2 = [[Drinks alloc]initWithProductId:183 productName:@"Ginger Zero" productPrice:3 productMadeInCountry:@"Canada" isDrinkDiet:YES drinkSize:200];


  //how to use MutableArray here... [@[@" ",@" ",@" "]mutableCopy]
    Food* food1 = [[Food alloc]initWithProductId:100 productName:@"Chicken" productPrice:8 productMadeInCountry:@"Canada" foodCalorie:350 foodSize:4 foodIngredients:[@[@"chicken", @"oil", @"cheese"]mutableCopy]];
    Food* food2 = [[Food alloc]initWithProductId:101 productName:@"Pasta" productPrice:18 productMadeInCountry:@"Canada" foodCalorie:250 foodSize:3 foodIngredients:[@[@"pasta",@"meet",@"spinach"]mutableCopy]];


    NSMutableArray<Material*>* materialArray = [[NSMutableArray alloc] init];
        Material* material1 = [[Material alloc]initWithMaterialCode:10 materialName:@"cotton"];
        Material* material2 = [[Material alloc]initWithMaterialCode:11 materialName:@"Nylon"];
        [materialArray addObject:material1];
        [materialArray addObject:material2];

    Cloth* cloth1 = [[Cloth alloc]initWithProductId:701 productName:@"T-shirt" productPrice:15 productMadeInCountry:@"China" clothMaterials:materialArray];


        //Amount 3
        [shopping addToShoppingCart:drink1];
        [shopping addToShoppingCart:drink1];
        [shopping addToShoppingCart:drink1];

        //Amount 1
        [shopping addToShoppingCart:drink2];

        //Amount 2
        [shopping addToShoppingCart:food1];
        [shopping addToShoppingCart:food1];

        //Amount 2
        [shopping addToShoppingCart:food2];
        [shopping addToShoppingCart:food2];

        //Amount 1
        [shopping addToShoppingCart:cloth1];



  //Call here to show the name and price of products
        [shopping showItemsName];
        [shopping calculateTotalCost];


    }//end of @autoreleasepool

}//end of main
